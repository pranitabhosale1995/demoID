// vitest.config.cjs
const { defineConfig } = require('vitest/config');

module.exports = defineConfig({
  test: {
    globals: true,
    environment: 'jsdom',
    threads: false, // workers बंद - Windows वर timeout टाळतो
    isolate: false, // isolates off ठेवलं की faster आणि safe
    include: ['src/**/*.test.{js,jsx}'],
    reporters: ['verbose'], // console वर clear output देतो
  },
});



"scripts": {
  "test": "vitest run --config ./vitest.config.cjs"
}





cd E:\Workspace\Fincore\Frontend
rmdir /s /q node_modules
del package-lock.json
npm install
npm run test




npx vitest run --threads=false --pool=forks --environment=jsdom
