// src/features/auth/components/UpdatePassword.jsx
import React, { useEffect, useState } from "react";
import axios from "axios";
import { Box, InputAdornment } from "@mui/material";
import LockIcon from "@mui/icons-material/Lock";

import {
  StyledTextField,
  PrimaryButton,
  FormTitle,
  PasswordErrorText,
} from "./LoginStyles";

export default function UpdatePassword({ userId, openLoginErrorDialog, onUpdateSuccess, content: parentContent }) {
  const [newPassword, setNewPassword] = useState("");
  const [confirmPassword, setConfirmPassword] = useState("");
  const [localError, setLocalError] = useState("");
  const [serverError, setServerError] = useState("");
  const [loading, setLoading] = useState(false);

  const [content, setContent] = useState(parentContent || null);

  useEffect(() => {
    if (parentContent) return;
    let cancelled = false;
    (async () => {
      try {
        const resp = await axios.get("/content/loginContent.json");
        if (!cancelled) setContent(resp.data || null);
      } catch (e) {
        // ignore
      }
    })();
    return () => {
      cancelled = true;
    };
  }, [parentContent]);

  const t = (path, fallback) => {
    const src = content || parentContent;
    if (!src) return fallback;
    const parts = path.split(".");
    let cur = src;
    for (const p of parts) {
      if (cur == null) return fallback;
      cur = cur[p];
    }
    return cur ?? fallback;
  };

  const resetErrors = () => {
    setLocalError("");
    setServerError("");
  };

  const validateLocal = () => {
    resetErrors();
    if (!newPassword || !confirmPassword) {
      setLocalError(t("form.passwordRequired", "Both password fields are required."));
      return false;
    }
    if (newPassword.length < 8) {
      setLocalError(t("form.passwordMinLength", "Password must be at least 8 characters long."));
      return false;
    }
    if (newPassword !== confirmPassword) {
      setLocalError(t("form.passwordMismatch", "Passwords do not match."));
      return false;
    }
    return true;
  };

  const handleUpdate = async () => {
    setServerError("");
    if (!validateLocal()) return;

    try {
      setLoading(true);
      const resp = await axios.post("/LS/auth/update-password", {
        userId,
        newPassword,
      });

      const result = resp?.data || {};

      if (result?.success === false || result?.error) {
        const message = result?.message || t("form.updateFailedMessage", "Failed to update password, please try again.");
        setServerError(message);
        openLoginErrorDialog(t("form.updateFailedTitle", "Update Failed"), message);
        return;
      }

      openLoginErrorDialog(t("form.updateSuccessTitle", "Password Updated"), t("form.updateSuccessMessage", "Password updated successfully. Please use the new password to sign in."));
      if (typeof onUpdateSuccess === "function") onUpdateSuccess();
    } catch (err) {
      console.error("Update password error:", err);
      const msg = err?.response?.data?.message || t("form.updateFailedMessage", "Failed to update password, please try again.");
      setServerError(msg);
      openLoginErrorDialog(t("form.updateFailedTitle", "Update Failed"), msg);
    } finally {
      setLoading(false);
    }
  };

  return (
    <Box>
      <FormTitle>{t("form.updatePasswordTitle", "Update Password")}</FormTitle>

      <StyledTextField
        fullWidth
        label={t("form.newPasswordLabel", "New Password")}
        type="password"
        placeholder={t("form.passwordPlaceholder", "Enter new password")}
        value={newPassword}
        onChange={(e) => setNewPassword(e.target.value)}
        margin="normal"
        InputProps={{
          startAdornment: (
            <InputAdornment position="start">
              <LockIcon />
            </InputAdornment>
          ),
        }}
      />

      <StyledTextField
        fullWidth
        label={t("form.confirmPasswordLabel", "Confirm Password")}
        type="password"
        placeholder={t("form.passwordPlaceholder", "Re-enter new password")}
        value={confirmPassword}
        onChange={(e) => setConfirmPassword(e.target.value)}
        margin="normal"
        InputProps={{
          startAdornment: (
            <InputAdornment position="start">
              <LockIcon />
            </InputAdornment>
          ),
        }}
      />

      {(localError || serverError) && (
        <PasswordErrorText>{localError || serverError}</PasswordErrorText>
      )}

      <PrimaryButton fullWidth variant="contained" onClick={handleUpdate} disabled={loading}>
        {loading ? t("form.updatingLabel", "Updating...") : t("form.updateButton", "Update Password")}
      </PrimaryButton>
    </Box>
  );
}
